{
	"description": "FT-branded tables",
	"origamiType": "module",
	"origamiCategory": "components",
	"origamiVersion": 1,
	"brands" : [
		"master",
		"internal",
		"whitelabel"
	],
	"support": "https://github.com/Financial-Times/o-table/issues",
	"supportContact": {
		"email": "origami.support@ft.com",
		"slack": "financialtimes/ft-origami"
	},
	"supportStatus": "active",
	"ci": {
		"circle": "https://circleci.com/api/v1/project/Financial-Times/o-table"
	},
	"browserFeatures": {
		"required": [
			"Element.prototype.matches",
			"IntersectionObserver",
			"IntersectionObserverEntry"
		]
	},
	"demosDefaults": {
		"js": "demos/src/demo.js",
		"sass": "demos/src/demo.scss",
		"dependencies": [
			"o-fonts@^3.0.0",
			"o-normalise@^1.0.0",
			"o-typography@v5.7.5"
		]
	},
	"demos": [
		{
			"title": "Basic",
			"name": "basic",
			"template": "demos/src/basic.mustache",
			"description": ""
		},
		{
			"title": "Compact",
			"name": "compact",
			"template": "demos/src/basic.mustache",
			"data": {
				"modifierClass": "o-table--compact"
			},
			"description": ""
		},
		{
			"title": "Row Stripes",
			"name": "row-stripes",
			"template": "demos/src/row-stripes.mustache",
			"description": ""
		},
		{
			"title": "Row headings",
			"name": "row-headings",
			"brands": ["internal"],
			"documentClasses": "o-table-demo-constrain",
			"template": "demos/src/row-headings.mustache",
			"description": ""
		},
        {
          "title": "Cell styles",
          "name": "cell-styles",
          "template": "demos/src/cell-styles.mustache",
          "description": ""
        },
		{
			"title": "Responsive Overflow",
			"name": "responsive-overflow",
			"template": "demos/src/responsive-overflow.mustache",
			"data": {
				"modifierClass": "o-table--responsive-overflow"
			},
			"documentClasses": "o-table-demo-constrain",
			"description": "On small viewports this table overflows and may be scrolled left/right."
		},
		{
			"title": "Responsive Scroll",
			"name": "responsive-scroll",
			"template": "demos/src/responsive-scroll.mustache",
			"data": {
				"modifierClass": "o-table--responsive-scroll"
			},
			"documentClasses": "o-table-demo-constrain",
			"description": "This table moves headers into the first column on small viewports. The headers stick to the left edge as the table data is scrolled."
		},
		{
			"title": "Responsive Flat",
			"name": "responsive-flat",
			"template": "demos/src/responsive-flat.mustache",
			"description": "Each entry in the flat table is shown individually with headers on small viewports."
		},
		{
			"title": "Sorting",
			"name": "sorting",
			"template": "demos/src/sorting.mustache",
			"description": "This demo shows sorting columns of various data types, including FT style dates, times, and abbreviated numbers. The demo also shows a column with sort disabled."
		},
		{
			"title": "Caption",
			"name": "captions",
			"template": "demos/src/captions.mustache",
			"documentClasses": "o-table-demo-constrain",
			"description": "Caption elements may include flow content such as a heading, this demo uses o-typography to add a h2."
		},
		{
			"title": "Pa11y",
			"name": "pa11y",
			"template": "demos/src/pa11y.mustache",
			"hidden": true
		}
	]
}
